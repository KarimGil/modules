<odoo>
    <data>

        <record id="vehicle_tree" model="ir.ui.view">
            <field name="name">car.tree</field>
            <field name="model">car</field>
            <field name="arch" type="xml">
               <tree string="Employees">
                   <field name="seq_name"/>
                   <field name="company_name"/>
                   <field name="model"/>
                   <field name="model_year"/>
                   <field name="color"/>
                   <field name="reffer_id"/>
                   <field name="state"/>
               </tree>

            </field>
        </record>


        <record id="vehicle_form" model="ir.ui.view">
            <field name="name">car.vehicle.home</field>
            <field name="model">car</field>
            <field name="arch" type="xml">
<!--                <br/>-->
<!--                <h3>Enter Car Details</h3>-->
                <form string="Vehicle" attrs="{'delete=0': [('state', 'in', ['confirm'])]}">
                    <header>
                        <button name="confirm_status" type="object" string="Confirm Status" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['confirm'])]}"/>
                        <field name="state" widget="statusbar"  id="status1"/>
<!--                        options="{'clickable' : '1'}"-->
                    </header>

                    <div class="oe_title">
                        <h1>
                            <field name="seq_name" readonly="1"/>
                        </h1>
                    </div>
                       <group>
                            <group>
                                <field name="company_name"/>
                                <field name="model"/>
                                <field name="model_year"/>
                                <field name="chassis"/>
                                <field name="color"/>
                                <field name="reffer_id" widget="many2many_tags"/>
                                <field name="sptype_id"/>
                                <button name="print_report" type="object" string="Print Report!" class="oe_highlight"/>



                            </group>
                           <group>
                               <field name="image" widget="image" height="200" border="1" width="150"/>
                                <field name="license_plate"/>
                                <field name="odometer"/>
                               <field name="immatriculation_date"/>
                               <field name="technology"/>
                           </group>
                       </group>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>


        <record id="action_vehicle" model="ir.actions.act_window">
            <field name="name">Vehicles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">car</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Enter your car details with the spare parts you want to buy.
              </p>
            </field>
        </record>

        <menuitem id="car_listings" name="Car Listings" sequence="1" web_icon="car/static/description/icon.png"/>
        <menuitem id="new_vehicles" name="Vehicles" parent="car_listings" action="action_vehicle"/>


    </data>
</odoo>

