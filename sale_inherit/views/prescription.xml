<odoo>
    <data>

        <record id="prescription_tree" model="ir.ui.view">
            <field name="name">prescription.tree</field>
            <field name="model">prescription</field>
            <field name="arch" type="xml">
               <tree string="Prescription">
                   <field name="seq_name"/>
                   <field name="patient_name"/>
                   <field name="patient_age"/>
                   <field name="gender"/>
                   <field name="date"/>
                   <field name="prescription_field"/>
               </tree>

            </field>
        </record>


        <record id="prescription_form" model="ir.ui.view">
            <field name="name">prescription.home</field>
            <field name="model">prescription</field>
            <field name="arch" type="xml">
                <form string="Prescription">
<!--                    <header>-->
<!--                        <button name="confirm_status" type="object" string="Confirm Status" class="oe_highlight" attrs="{'invisible': [('state', 'in', ['confirm'])]}"/>-->
<!--                        <field name="state" widget="statusbar"  id="status1"/>-->
<!--&lt;!&ndash;                        options="{'clickable' : '1'}"&ndash;&gt;-->
<!--                    </header>-->

                    <div class="oe_title">
                        <h1>
                            <field name="seq_name" readonly="1"/>
                        </h1>
                    </div>
                       <group>
                            <group>
                                <field name="patient_name"/>
                                <field name="patient_age"/>
                                <field name="gender"/>
                            </group>

                           <group>
                               <field name="address"/>
                               <field name="date"/>
                               <field name="prescription_field"/>
                           </group>
                       </group>
                </form>
            </field>
        </record>


        <record id="action_prescription" model="ir.actions.act_window">
            <field name="name">Prescription</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">prescription</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Create prescription here!
              </p>
            </field>
        </record>

        <menuitem id="clinic" name="Clinic"/>
        <menuitem id="new_prescription" name="Prescription" parent="clinic" action="action_prescription"/>


    </data>
</odoo>

